<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D3C65"
    android:orientation="vertical"
    tools:context=".Setting">

    <LinearLayout
        android:id="@+id/arrBack"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/outline_arrow_back_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:text="Quay lại"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="25sp"
        android:textColor="#FFF"
        android:gravity="center"
        android:text="Nhóm 1-Nguyễn Xuân Triết"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/outline_settings_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thiết lập"
        android:textColor="#fff"
        android:textSize="30sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvNhac"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"

        android:background="@drawable/bg_alarm_selector"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_music_note"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:focusable="true"

        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Chọn nhạc báo thức"

        android:textColor="#212121"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvMucTieu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"

        android:background="@drawable/bg_alarm_selector"
        android:clickable="true"
        android:drawableEnd="@drawable/outline_arrow_forward_24"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:focusable="true"

        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Điều chỉnh mục tiêu giấc ngủ"

        android:textColor="#212121"
        android:textSize="16sp" />
</LinearLayout>