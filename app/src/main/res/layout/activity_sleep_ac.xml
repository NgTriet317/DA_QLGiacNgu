<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#050149"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:subtitle="Nhóm 1-Nguyễn Thành Đạt"
            android:background="#CBD5E1"
            app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Large"
            app:subtitleTextColor="#000FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Hoạt động giấc ngủ" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="20dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar">


            <!-- Tiêu đề -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/textcard"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_tong_thoi_luong"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_alarm" />

                <TextView
                    android:id="@+id/TvTong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Tổng thời lượng ngủ"
                    android:textColor="#F6F4F4"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvhientong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F6F4F4"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/textcard"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvngay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Ngày"
                    android:textColor="#F6F4F4"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvhienngay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F6F4F4"
                    android:textSize="17sp" />
            </LinearLayout>


            <!-- Chu kỳ giấc ngủ -->
            <TextView
                android:id="@+id/tvchuky"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Chu kỳ giấc ngủ:"
                android:textColor="#F6F4F4"
                android:textSize="18sp" />


            <!-- Ngủ nông -->
            <LinearLayout
                android:id="@+id/row_ngu_nong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textcard"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:radius="8dp">


                <ImageView
                    android:id="@+id/icon_ngu_nong"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_sleep_face" />


                <TextView
                    android:id="@+id/tvngunong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Ngủ nông: "
                    android:textColor="#F6F4F4"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/tvhiennong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F6F4F4"
                    android:textSize="17sp" />
            </LinearLayout>


            <!-- Ngủ sâu -->
            <LinearLayout
                android:id="@+id/rowngusau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textcard"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:id="@+id/iconngusau"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_sleep_face" />

                <TextView
                    android:id="@+id/tvngusau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Ngủ sâu:"

                    android:textColor="#F6F4F4"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/tvhiensau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F6F4F4"
                    android:textSize="17sp" />
            </LinearLayout>


            <!-- Giấc mơ -->
            <LinearLayout
                android:id="@+id/row_giac_mo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textcard"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">


                <ImageView
                    android:id="@+id/icon_giac_mo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_sleep_face" />


                <TextView
                    android:id="@+id/tvgiacmo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Giấc mơ:"
                    android:textColor="#F6F4F4"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/tvhiengiac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F6F4F4"
                    android:textSize="17sp" />
            </LinearLayout>


            <!-- Thời gian ngủ & thức -->
            <TextView
                android:id="@+id/tv_thoi_gian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Thời gian ngủ và Thức:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


            <!-- Các hàng bên dưới giữ nguyên kiểu -->
            <LinearLayout
                android:id="@+id/row_bat_dau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/textcard"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">


                <ImageView
                    android:id="@+id/icon_bat_dau"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_sleep_face" />


                <TextView
                    android:id="@+id/tvbatdau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Bắt đầu ngủ:"
                    android:textColor="#F6F4F4"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/tvhienbatdau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F6F4F4"
                    android:textSize="17sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/row_so_lan_thuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="@drawable/textcard"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">


                <ImageView
                    android:id="@+id/icon_so_lan_thuc"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_sleep_face" />


                <TextView
                    android:id="@+id/tvSolan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Số lần thức: "
                    android:textColor="#F6F4F4"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/tvhiensolan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F6F4F4"
                    android:textSize="17sp" />
            </LinearLayout>


            <Button
                android:id="@+id/btnPhanTich"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phân tích" />


            <TextView
                android:id="@+id/tvDanhap"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="Đã Nhập"
                android:textColor="#F6F4F4" />


            <TextView
                android:id="@+id/tvKetQua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F6F4F4"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer" />
</androidx.drawerlayout.widget.DrawerLayout>
