<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tktuanthang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2C2B52"
        tools:context=".SleepWM">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="#CBD5E1"
            app:subtitle="Nhóm 1-Dương Hoàng Trọng Phúc"
            app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Large"
            app:subtitleTextColor="#000FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Thống kê theo tuần tháng" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <TextView
                android:id="@+id/tvtuan"
                android:layout_width="125dp"
                android:layout_height="55dp"
                android:layout_marginEnd="8dp"
                android:background="#9C37D3"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="tuần"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvthang"
                android:layout_width="125dp"
                android:layout_height="55dp"
                android:background="@drawable/vienmau"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="tháng"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/lvStats"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:divider="#4A4974"
            android:dividerHeight="1dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@+id/tvSelectedInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

        <TextView
            android:id="@+id/tvSelectedInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#3D3C65"
            android:gravity="center"
            android:padding="16dp"
            android:text="Chọn một dòng để xem chi tiết"
            android:textColor="#FFEB3B"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer"
        app:headerLayout="@layout/nav_header"/>

</androidx.drawerlayout.widget.DrawerLayout>