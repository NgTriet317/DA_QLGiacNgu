<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAIN CONTENT -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#181741">

        <!-- TOOLBAR -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#CBD5E1"
            app:subtitle="Nhóm 1-Nguyễn Xuân Quốc"
            app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Large"
            app:subtitleTextColor="#000FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Trang chủ" />


        <!-- FORM AREA -->
        <LinearLayout
            android:id="@+id/formArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <!-- Giờ ngủ -->
            <TextView
                android:id="@+id/tvNgu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_card"
                android:drawableEnd="@android:drawable/ic_lock_idle_alarm"
                android:focusable="false"
                android:hint="Sleep time"
                android:padding="14dp" />

            <!-- Wake time -->
            <TextView
                android:id="@+id/tvThuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_card"
                android:drawableEnd="@android:drawable/ic_lock_idle_alarm"
                android:focusable="false"
                android:hint="Wake up time"
                android:padding="14dp" />

            <!-- Tên báo thức -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal" />

            <!-- LƯU -->

        </LinearLayout>

        <!-- OPTIONS -->

        <!-- NGỦ BUTTON -->

        <TextView
            android:id="@+id/tvAlarmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="24dp"
            android:text="Cài đặt báo thức"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/formArea" />

        <!-- Enable Alarm -->
        <Switch
            android:id="@+id/switchAlarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Bật báo thức"
            android:textColor="#fff"
            android:textSize="20sp"
            android:thumbTint="#4CAF50"
            android:trackTint="#000FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAlarmTitle" />

        <LinearLayout
            android:id="@+id/layoutAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:visibility="gone"
            android:background="@drawable/textcard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switchAlarm"
            android:orientation="vertical">
            <!-- Alarm Type -->
            <TextView
                android:id="@+id/tvLoaiBaoThuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginTop="16dp"
                android:text="Loại báo thức"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <RadioGroup
                android:id="@+id/rgAlarmType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbAmThanh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhạc"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rbRung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rung"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rbCaHai"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:text="Rung + Nhạc"
                    android:textColor="#fff"
                    android:textSize="20sp" />
            </RadioGroup>

            <!-- Snooze -->
            <CheckBox
                android:id="@+id/cbBaoLai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginTop="12dp"
                android:text="Báo thức lặp lại (5 phút)"
                android:textColor="#fff"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rgAlarmType" />

            <!-- Volume -->

            <TextView
                android:id="@+id/tvVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:text="Âm lượng báo thức"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cbBaoLai" />

            <SeekBar
                android:id="@+id/seekVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="70"
                android:progressTint="#fff"
                android:thumbTint="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvVolume" />
        </LinearLayout>

        <Button
            android:id="@+id/btnNgu"
            android:layout_width="279dp"
            android:layout_height="91dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="#CBD5E1"
            android:text="Sleep now"
            android:textColor="#000"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.553"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutAlarm" />

        <!-- BOTTOM MENU -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- NAV DRAWER -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer" />

</androidx.drawerlayout.widget.DrawerLayout>
